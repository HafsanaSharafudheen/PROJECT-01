<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>

<style>
  .container {
    margin-top: 5rem;
  }

  .balance-box {
  position: absolute;
  right: 20px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #f5f5f5;
  text-align: center;
}
.balance-box h3{
  color: green;
}

  .AddBtn {
    border: 1px solid #fff;
    background-color: #D7A2A2;
    color: white;
    font-size: 1rem;
    margin-top: 1rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .AddBtn:hover {
    background-color: #C18989;
  }

  .cardDiv {
    border: 1px solid rgb(134, 44, 44);
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-top: 6rem;
  }

  h1 {
    font-size: 2rem;
  }


  p {
    margin: 0;
  }
</style>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h1>YOUR WALLET</h1>
      <div class="balance-box">
        <h2>Your Balance</h2>
        <h3><%= totalWalletAmount %></h3>
      </div>
    </div>
  </div>

 

  <div class="row">
    <% if (userWallet && userWallet.length > 0) { %>
      <% userWallet.forEach(function(userWallet) { %>
        <div class="col-md-6 cardDiv">
          \\<h6>Wallet Amount: <span style="color: red;"><%= userWallet.walletAmount %></span></h6>
          <div class="transaction-box">
            <h6>Transaction: <%= userWallet.transaction %></h6>
            <h6>Description: <%= userWallet.transactionDescription %></h6>
            <h6>Date: <%= (new Date(userWallet.transactionDate)).toLocaleString("en-US") %></h6>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <div class="col-md-6 cardDiv">
        <p>No wallet details found.</p>
      </div>
    <% } %>
  </div>
</div>



<%- include('./partials/footer.ejs') %>
